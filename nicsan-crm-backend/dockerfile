# ---- base image ----
FROM node:18-alpine

# App folder
WORKDIR /app

# Install only prod deps
COPY package*.json ./
RUN npm ci --only=production

# Copy source
COPY . .

# Environment
ENV NODE_ENV=production
ENV PORT=5173

# Expose container port
EXPOSE 5173

# Lightweight healthcheck (expects /healthz route)
HEALTHCHECK --interval=30s --timeout=3s --retries=3 \
  CMD wget -qO- http://127.0.0.1:5173/healthz || exit 1

# Start your app (change if your start script differs)
CMD ["npm","start"]
